<%= image_tag user.get_profile_image(100,100), class: "d-block mx-auto my-2" %>

<div class="row">
  <div class="col"></div>
  <div class="col">
    <table class="table table-hover">
      <tr>
        <th>Name:</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>Email:</th>
        <td><%= user.email %></td>
      </tr>
    </table>
  </div>
  <div class="col"></div>
</div>

<% if user.name != "guestuser" %>
  <%= link_to edit_users_path, class: 'btn btn-outline-secondary btn-block', method: :get do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
<% end %>