<!DOCTYPE html>
<html>
  <head>
    <title>TaskManager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/b53b8d2357.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark">

        <div class="container">

          <div class="navbar-header">
            <button type="button" class="navbar-toggler collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="navbar-toggler-icon"></span>
            </button>
            <%= link_to "Task Manager", root_path, class: "navbar-brand" %>
          </div>

          <nav>
            <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse ml-auto">
            <% if user_signed_in? %>
              <li>
                <%= link_to users_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-list-check"></i>
                  tasks
                <% end %>
              </li>
              <li>
                <%= link_to new_task_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-square-plus"></i>
                  New Task
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: "delete", class: "nav-link text-light" do %>
                  <i class="fa-solid fa-right-from-bracket"></i>
                  Log out
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to root_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-house"></i>
                  Home
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-user-plus"></i>
                  Sign up
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-arrow-right-to-bracket"></i>
                  Log in
                <% end %>
              </li>
            <% end %>
            </ul>
          </nav>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
