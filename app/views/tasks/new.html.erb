<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <main>
        <h4>New Task</h4>

        <%= form_with model: @task do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>

          <%= f.label :body, "task", class: "font-weight-bold" %>
          <%= f.text_field :body, class: 'form-control' %>

          <%= f.label :due, class: "font-weight-bold" %>
          <%= f.datetime_field :due, class: 'form-control' %>

          <%= f.label :reminder_active, "Reminder", class: "font-weight-bold d-block" %>

          <%= f.radio_button :reminder_active, :true %>
          <%= f.label :reminder_active, "ON" %>

          <%= f.radio_button :reminder_active, :false, :checked => true %>
          <%= f.label :reminder_active, "OFF" %>

          <div class="mt-3"><%= f.submit 'Save', class: "submit btn btn-success" %></div>
        <% end %>
      </main>

    </div>
    <div class="col-md-2"></div>
  </div>
</div>